<% if items.any? %>

  <p class="header">
    <%= subscription_types[subscription.subscription_type][:results_header] %>
  </p>

  <ul>
    <% current_date = nil %>
    <% items.each do |item| %>
      <% if item.date.strftime("%Y-%m-%d") != current_date %>
        <p class="date"><%= long_date item.date %></p>
        <% current_date = item.date.strftime("%Y-%m-%d") %>
      <% end %>
      <%= partial :"subscriptions/#{subscription.subscription_type}/result", :locals => {:item => item, :subscription => subscription} %>
    <% end %>
  </ul>
  
<% else %>
  
  <p>
    No results found for this search.
  </p>
  
<% end %>