<% if items.any? %>

  <p class="header">
    Latest introduced or updated bills for "<%= subscription.keyword %>":
  </p>

  <ul>
    <% current_date = nil %>
    <% items.each do |item| %>
      <% if item.date != current_date %>
        <p class="date"><%= just_date item.date %></p>
        <% current_date = item.date %>
      <% end %>
      <%= partial :"subscriptions/result_item", :locals => {:item => item} %>
    <% end %>
  </ul>
  
<% else %>
  
  <p>
    No results found for this search.
  </p>
  
<% end %>