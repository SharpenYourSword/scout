<% content_for :title do %>
    <h2>Subscriptions</h2>
<% end %>

<% content_for :sidebar_right do %>
    <div class="rss cluster">
        <h4>Master Feed <a class="rssFeed">RSS</a></h4>
        <small>A combined RSS feed of updates on everything you follow.</small>
    </div>

    <%= recent_searches %>
<% end %>

<div class="contentArea left">

    <div class="subscriptionsList">

        <% if interests.any? %>

            <% interests.each do |interest| %>
                <fieldset class="subscription">
                    
                    <h3><%= interest_name interest %></h3>

                    <a class="rssFeed" href="/interest/<%= interest.id %>.rss">RSS</a>

                    <div class="searchParameters">
                        <span class="dataSet">'Congressional Bills'</span>, 
                        <span class="dataSet">'Comments on Regulations'</span>
                    </div>
                    
                    <h5 class="radioLabel">Notification Type</h5>
                    
                    <input type="radio" name="transparency" id="id_emailNotifications" /><span>Email</span>
                    <input type="radio" name="transparency" id="id_smsNotifications" /><span>SMS</span>
                    <input type="radio" name="transparency" id="id_smsNotifications" /><span>RSS Only</span>

                    <div class="removeSubscription">
                        <input type="checkbox" name="transparency" id="id_smsNotifications" />
                        <span>Remove</span>
                    </div>
                </fieldset>
            <% end %>

        <% else %>
            You haven't followed anything yet.
        <% end %>

    </div>

</div>