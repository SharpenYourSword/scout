    <div class="headerWrapper">
        <div class="hatWrap">
            <div class="contentWrapper">
                <a class="productOf" href="http://www.sunlightfoundation.com">
                        a product of Sunlight Foundation
                </a>
            </div>
        </div>

        <% if home? %>
        <div class="homeWrapper">
        <% end %>

        <header class="contentWrapper">
            <nav>
                <ul id="userNav">
                    <% if logged_in? %>
                        <li class="user">
                            <%= current_user.email %>
                        </li>
                        <li class="subscriptions">
                            <a href="/account/subscriptions">
                                Subscriptions
                                <span class="count">(<%= @interests.size %>)</span>
                            </a>
                        </li>
                        <li class="settings">
                            <a href="/account/settings">Settings</a>
                        </li>
                        <li class="feedback">
                            <a href="mailto:scout+contact@sunlightfoundation.com" class="feedback">Contact</a>
                        </li>
                        <li>
                            <a href="/logout" class="logout">Log Out</a>
                        </li>
                    <% else %>
                        <li class="feedback">
                            <a href="mailto:scout+contact@sunlightfoundation.com" class="feedback">Contact</a>
                        </li>
                        <li>
                            <a href="/login" class="login">Login or Sign up</a>
                        </li>
                    <% end %>
                </ul>
            </nav>
            
            <div class="clear"></div>
            
            <a href="/">
                <h1 class="textIndent">Scout</h1>
            </a>
            <% if home? %>
            <p class="splashtext">
                Get alerts when congress or your state capitol talks about issues you care about
            </p>
            <% end %>
            
            <%= partial "search/search", :engine => "erb", :locals => {} %>

            <div class="clear"></div>
        </header>

        <% if home? %>
        </div>
        <% end %>
    </div>

    <div class="fauxBody">
        <div class="contentWrapper" id="content">

            <% if left_bar = content_from(:sidebar_left) %>
                <div class="sidebar left">
                    <%= left_bar %>
                </div>
            <% end %> 
            
            <div id="center">
                <%= yield %>
            </div>

            <% if right_bar = content_from(:sidebar_right) %>
                <div class="sidebar right">
                    <%= right_bar %>
                </div>
            <% end %>
        </div>
    </div>

    <div class="footerWrapper">
        <footer class="contentWrapper">
            <a href="http://sunlightfoundation.com" class="sunlightFoundation textIndent">
                Sunlight Foundation
            </a>

            <div class="aboutSF">
                <p>
                Founded in 2006, the Sunlight Foundation is a non-partisan non-profit that uses cutting-edge technology and ideas to make government transparent and accountable.   </p>
                <p>
                    Visit <a href="http://sunlightfoundation.com">SunlightFoundation.com</a> to learn more.
                </p>
            </div>
            
            <nav>
                <a href="/about">About</a>
            </nav>

            <div class="clear"></div>
        </footer>
    </div>

