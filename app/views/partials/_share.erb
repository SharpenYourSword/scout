<div class="share-buttons" id="share-buttons"
  data-socialite="ready"
  data-services="twitter-tweet,facebook"

  ></div>

<script>
  $(document).ready(function() {
    <% if defined?(title) %>
      var title = "Scout - \"<%= escape_javascript(title) %>\"";
    <% else %>
      var title = "Scout - " + $(".entryHeader h2").text();
    <% end %>

    $(".share-buttons")
      .attr("data-options", "title=" + encodeURIComponent(title))
      .attr("data-twitter-tweet-options", "count=none");

    $(".share-buttons").trigger("register").trigger("ready");
    console.log("Loaded sharing options.")
  });
</script>