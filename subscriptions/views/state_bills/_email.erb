<%
# we have the user, interest, and item values available to us 
%>
<% bill = item.data %>
<%= email_header bill['bill_id'], item_url(item, user.service) %>

<%= email_subheader_div %>
  <%= state_name bill['state'] %>
  &mdash;
  <% if bill['action_dates'] and bill['action_dates']['last'] %>
    <% date = bill['action_dates']['last'] %>
    <% if date < Time.zone.now %>
      Last activity on
    <% else %>
      Upcoming activity on
    <% end %>
  <% else %>
    <% date = bill['created_at'] %>
    Information first discovered on
  <% end %>
  <%= just_date item.date %>
</div>

<%= email_content_p %>
  <%= state_bill_highlight item, interest, inline: true %>
</p>