<% document = item.data %>
<title><%= document['title'] %></title>
<description><![CDATA[
  <% if (highlight = document_highlight(item, interest)) %>
    <%= highlight %>
  <% elsif document['description'].present? %>
    <%= truncate document['description'], 500 %>
  <% else %>
    No excerpt or description available.
  <% end %>
]]></description>