<% bill = item.data %>
<item>
  <title><%= bill['short_title'].present? ? bill['short_title'] : bill['official_title'] %></title>
  <% if bill['search']['highlight'] %>
      <description><![CDATA[
        <%= bill_highlight item, keyword %>
      ]]></description>
  <% elsif bill['summary'].present? %>
    <%= bill['summary'] %>
  <% else %>
    No excerpt or summary available.
  <% end %>
  <link>http://<%= config[:hostname] %><%= item_path 'bill', item.item_id %></link>
  <guid>http://<%= config[:hostname] %><%= item_path 'bill', item.item_id %></guid>
  <pubDate><%= rss_date item.date %></pubDate>
</item>