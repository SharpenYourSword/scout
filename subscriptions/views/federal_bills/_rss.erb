<% bill = item.data %>
<title><%= bill['short_title'].present? ? bill['short_title'] : bill['official_title'] %></title>
<% if item.data['search']['highlight'] and (highlight = bill_highlight item, interest.in) %>
    <description><![CDATA[
      <%= highlight %>
    ]]></description>
<% elsif bill['summary'].present? %>
  <description><%= truncate bill['summary'], 500 %></description>
<% else %>
  <description>No excerpt available.</description>
<% end %>