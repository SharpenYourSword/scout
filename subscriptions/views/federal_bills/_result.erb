<% bill = item.data %>
<% version = item.data['last_version'] %>

<a href="<%= item_path item %>">
  <% if bill['short_title'].present? %>
    <h4><%= bill['short_title'] %></h4>
  <% else %>
    <h4><%= bill['official_title'] %></h4>
  <% end %>
</a>
<div class="subtitle">
  <span class="code"><%= bill_code bill['bill_type'], bill['number'] %></span>
  &mdash;
  <span class="version"><%= bill_version version['version_code'] %></span>
</div>

<p>
  <% if item.data['search']['highlight'] %>
    <%= bill_highlight item, interest %>
  <% elsif bill['summary'] %>
    <%= truncate bill['summary'], 500 %>
  <% else %>
    No excerpt available.
  <% end %>
</p>